#include <stdio.h>

int main(void) {
//*verificando todas as condiÃ§oes*//
float dinheiro = 1500;
float placa_mae = 700;
float memoria_ram = 800;
float processador = 700;
float ssd = 350;
float placa_de_video =480;

if(dinheiro >= placa_mae)
{printf("comprar a placa-mae!\n"); dinheiro-= placa_mae;
}
if(dinheiro >= memoria_ram)
{printf("comprar a memoria_ram!\n"); dinheiro-= memoria_ram;
}
if(dinheiro >= processador)
{printf("comprar a processador!\n"); dinheiro-= processador;
}
if(dinheiro >= ssd)
{printf("comprar a ssd!\n"); dinheiro-= ssd;
}
if(dinheiro >= placa_de_video)
{printf("comprar a placa_de_video!\n"); dinheiro-= placa_de_video;
}

printf("Sobrou: R$ %f\n", dinheiro);


return 0;

}
